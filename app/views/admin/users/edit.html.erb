<%= form_for @user, url: admin_user_path(@user), :html => {:class => "form-horizontal"} do |f| %>
  <div class = "form-group">
    <%= f.label :username, :class => "col-sm-2 control-label" %>
    <div class = "col-sm-10">
      <%= f.text_field :username, :class => "form-control" %>
    </div>
  </div>

  <div class = "form-group">
    <%= f.label :name, :class => "col-sm-2 control-label" %>
    <div class = "col-sm-10">
      <%= f.text_field :name, :class => "form-control" %>
    </div>
  </div>

  <div class = "form-group">
    <%= f.label :email, :class => "col-sm-2 control-label text-right" %>
    <div class = "col-sm-10">
      <%= f.email_field :email, :class => "form-control" %>
    </div>
  </div>

  <div class = "form-group">
    <%= f.label :password, :class => "col-sm-2 control-label text-right" %>
    <div class = "col-sm-10">
      <%= f.password_field :password, :class => "form-control" %>
    </div>
  </div>

  <div class = "form-group">
    <%= f.label :role, :class => "col-sm-2 control-label text-right" %>
    <div class = "col-sm-10">
      <%= f.select :role, @roles.collect {|r| [r.title, r.id]}, {:selected => @user.role.id.to_s}, {:class => "form-control"} %>
    </div>
  </div>

  <div class = "form-group">
    <div class = "col-sm-offset-2 col-sm-10">
      <%= f.submit "Update User Details", :class => "btn btn-default" %>
    </div>
  </div>
<% end %>
