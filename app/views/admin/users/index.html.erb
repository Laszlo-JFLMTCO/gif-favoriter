<h1>User List</h1>

<table class = "table">
  <tr>
    <th>Username</th>
    <th>Site Role</th>
    <th class = "text-center" colspan = "2">Action</th>
  </tr>
  <% @users.each do |user|%>
    <tr>
      <td><%= link_to user.username, admin_user_path(user) %></td>
      <td><%= user.role.title %></td>
      <td class = "text-center"><%= link_to "Edit", edit_admin_user_path(user), class: "btn btn-warning" %></td>
      <td class = "text-center"><%= link_to "Delete", user_path(user), method: :delete, class: "btn btn-danger" %></td>
    </tr>
  <% end  %>
</table>