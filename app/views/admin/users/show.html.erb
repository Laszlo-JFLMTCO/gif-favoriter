<form class = "form-horizontal container">
  <div class = "form-group">
    <%= label_tag "Username: ", nil, :class => "col-sm-2 control-label" %>
    <div class = "col-sm-10">
      <%= text_field_tag :username, @user.username, class: "form-control", disabled: true %>
    </div>
  </div>

  <div class = "form-group">
    <%= label_tag "Name: ", nil, :class => "col-sm-2 control-label" %>
    <div class = "col-sm-10">
      <%= text_field_tag :name, @user.name, class: "form-control", disabled: true %>
    </div>
  </div>

  <div class = "form-group">
    <%= label_tag "Email: ", nil, :class => "col-sm-2 control-label" %>
    <div class = "col-sm-10">
      <%= text_field_tag :email, @user.email, class: "form-control", disabled: true %>
    </div>
  </div>

  <div class = "form-group">
    <%= label_tag "Role: ", nil, :class => "col-sm-2 control-label" %>
    <div class = "col-sm-10">
      <%= text_field_tag :role, @user.role.title, class: "form-control", disabled: true %>
    </div>
  </div>
</form>