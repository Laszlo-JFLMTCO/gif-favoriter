
  <div class = "container">
    <%= form_for @gif, url: editor_gifs_path, :html => {:class => "form-horizontal"} do |f| %>
      <div class = "form-group">
        <div class = "col-md-offset-2 col-sm-2">
          <%= f.submit "Add to Collection", :class => "btn btn-default" %>
        </div>
      </div>
      <div class = "form-group">
        <%= f.label :url, :class => "col-sm-2 control-label" %>
        <div class = "col-sm-10">
          <%= f.text_field :url, :class => "form-control", readonly: true %>
        </div>
      </div>
      <div class = "form-group">
        <%= f.label :image_original_url, :class => "col-sm-2 control-label" %>
        <div class = "col-sm-10">
          <%= f.text_field :image_original_url, :class => "form-control", readonly: true %>
        </div>
      </div>
      <div class = "form-group">
        <%= f.label :fixed_width_downsampled_url, :class => "col-sm-2 control-label" %>
        <div class = "col-sm-10">
          <%= f.text_field :fixed_width_downsampled_url, :class => "form-control", readonly: true %>
        </div>
      </div>
      <div class = "form-group">
        <%= f.label :keyword, :class => "col-sm-2 control-label" %>
        <div class = "col-sm-10">
          <%= f.text_field :keyword, :class => "form-control", readonly: true %>
        </div>
      </div>
    <% end %>
    <img src="<%= @gif[:image_original_url] %>" class="col-md-offset-2 img-responsive" alt="Responsive image">
  </div>