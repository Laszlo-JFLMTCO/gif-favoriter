<div class = "container">
<nav class="navbar navbar-default navbar-fixed-top navbar-pushin">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="/"><span class="glyphicon glyphicon-home" aria-hidden="true" id = "home-button"></span></a>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav navbar-left">
        <% if current_user %>
          <li class = "navbar-text"><strong>Hello, <%= current_user.name %></strong></li>
        <% end %>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <li>
          <% if current_user %>
            <div class="form-group navbar-text">
              <%= link_to "Logout", logout_path, method: :delete, class: "btn btn-default" %>
            </div>
          <% else %>
            <form action = "/login" method = "POST" class="form-inline navbar-text">
              <input type = "hidden" name = "authenticity_token" />
              <div class="form-group">
                <input type="text" class="form-control" name = "username" id="username" placeholder="Username">
              </div>
              <div class="form-group">
                <input type="password" class="form-control" name = "password" id="exampleInputPassword3" placeholder="Password">
              </div>
              <button type="submit" class="btn btn-default">Sign In</button>
            </form>
          <% end %>
        </li>
          <% if current_user.nil? %>        
        <li>
          <div class="form-group navbar-text">
            <%= link_to "Join The Fun", new_user_path, class: "btn btn-default" %>
          </div>
        </li>
        <% end %>
      </ul>
    </div>
  </div>
</nav>
</div>